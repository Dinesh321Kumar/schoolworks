        section.sec.partners.py-md-5.py-lg-6.bg-white
            .container
                h2.text-center Approved Provider Status
                h3.p.text-center.mb-5 SchoolWorks is approved by several national, state, and district-level agencies.

                .partners__slider.owl-carousel
                    mixin item(img, h3, p)
                        .item.text-center.d-flex.flex-column.align-items-center
                            .img.mb-4.flex-grow-1.d-flex.align-items-end.justify-content-center
                                img.img-fluid(src="images/"+img+".png", alt="")
                            h3.fw-bold.mb-2= h3
                            p= p
